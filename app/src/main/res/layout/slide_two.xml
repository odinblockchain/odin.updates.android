<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INTUITIVE"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="@dimen/text_size_large"
        android:layout_marginTop="130dp"
        />

    <TextView
        android:id="@+id/title_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="MAKING BLOCKCHAIN USABLE"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We embody human-centered design across all our projects and frameworks in order to ensure intuitive ease of use and simplicity of experience."
        android:textColor="@color/white"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="@dimen/text_size_small"
        android:layout_marginTop="30dp"
        />

</LinearLayout>